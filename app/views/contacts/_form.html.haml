%body#contact
  #div-load{:style => "display:none"}
  #div-another-image{:style => "display:none"}
  .container
    .row
      .col-lg-12.col-xs-12
        .main_container
          .inner_container
            .menu
              = render :partial => "home/main_menu"
            .content_box1
              .content_box2{style: "background:#e9f4e9;"}
                .clear  
                .contact_header
                  %h3
                    199 Mott street sales gallery
                    %span by Appointment Only
                  .contact_box
                    %p
                      201 Mott Street â€” Parlor Floor
                      New York NY 10012
                  .contact_box{style: "float:left; text-align:left;"}
                    %p Tel:  (212) 343 0199
                    %p Fax: (212) 344 0199
                  .contact_box{style: "float:right; text-align:right;"}
                    %p Email: info@199mott.com
                .clearfix
                .contact_form
                  = form_for @contact do |f|
                    %h2 Please fill out this form to learn more about 199 mott
                    .contact_left
                      .text_box#first
                        %span FIRST NAME*
                        = f.text_field :first_name, :id => "first_name"
                        %span#first_name_error
                      .text_box#last
                        %span LAST NAME*
                        = f.text_field :last_name, :id => "last_name"
                        %span#last_name_error
                      .text_box#address
                        %span ADDRESS*
                        = f.text_field :address, :id => "address_field"
                        %span#address_error
                      .text_box#city
                        %span CITY
                        = f.text_field :city, :id => "city_field"
                        %span#city_error
                    .contact_left{style: "margin-left:5%"}
                      .text_box#phone
                        %span Phone
                        = f.text_field :phone, :id => "phone_field"
                        %span#phone_error
                      .text_box#email
                        %span Email*
                        = f.text_field :email, :id => "email_field"
                        %span#email_error
                      .text_box#state
                        %span State*
                        = f.text_field :state, :id => "state_field"
                        %span#state_error
                      .text_box#zip
                        %span Zip
                        = f.text_field :zip, :id => "zip_field"
                        %span#zip_error
                    .clearfix
                    .contact_lower_left
                      .option_box#residence
                        %span WHAT RESIDENCE ARE YOU INTERESTED IN?
                        .styled-select
                          = f.select :residence, Contact::RESIDENCE, :prompt => ""
                        %span#residence_error
                      .option_box#price
                        %span WHAT IS YOUR PRICE RANGE?
                        .styled-select
                          %select
                            %option
                    .contact_lower_right
                      .option_box#hear
                        %span HOW DID YOU HEAR ABOUT US?
                        .styled-select
                          = f.select :how_did_you_hear, Contact::HEAR, :prompt => ""
                        %span#hear_error
                      .option_box#feature
                        %span WHAT IS YOUR MOST IMPORTANT FEATURE?
                        .styled-select
                          = f.select :imp_feature, Contact::FEATURE, :prompt => ""
                        %span#feature_error
                    .clearfix  
                    .contact_lower_left1
                      .contact_box1
                        %span Are you represented by a broker?
                        %a{:id => "text_y"} Y
                        %a{:id => "text_n"} N
                        = f.hidden_field :represented_by_broaker
                    .contact_lower_left2
                      .contact_box1
                        %span Are you a broker?*
                        %a{:id => "text_new_y"} Y
                        %a{:id => "text_new_n"} N
                        = f.hidden_field :broaker
                        %span.required * required fields
                    .clearfix  
                    .additional_comment#comment
                      %span Additional Comments
                      = f.text_area :comment, :cols => "2", :rows => "5", :id => "comment_field"
                      %span#comment_error
                    .clearfix  
                    .sumit_btn
                      = f.submit "Submit", :class => "save_contact"
            = render :partial => "home/footer"

