:javascript
  var cur_slide=0;
  var bh_totel_slide = $('.main_box_press').length;
  var bh_neg_total = 0-bh_totel_slide;
  
  $('.next').click(function(e) {
    $('.prev').show();
    bh_slide('right');
    e.preventDefault();
  });
  
  $('.prev').click(function(e) {
    $('.next').show();
    bh_slide('left');
    e.preventDefault();
  });
  $('.residence ul li').click(function() {
    $('.prev').show();
    $('.next').show();
    var cur_slide_index = $(this).index();
    //alert('test1-'+cur_slide_index);
    bh_slide('left',cur_slide_index);
  });
  function bh_slide(dir,direct_slide) {
    var  slide=0 
    var left_css
    //alert('test-'+direct_slide);
    if(dir == 'left') 
      cur_slide++;
    else
      cur_slide--;
    if(typeof(direct_slide) != 'undefined') {
      direct_slide = 0-direct_slide;
      cur_slide = direct_slide;
    }
    slide=cur_slide;
    left_css = slide*1105;
    left_css += 'px';
    $('#bh_slide_1').css('margin-left',left_css);
    if( (cur_slide) == (bh_neg_total+1) )
      $('.next').hide();
    if( (cur_slide) == 0 ) 
      $('.prev').hide();
    var pos_slide = Math.abs(cur_slide);
    $('.residence ul li').each(function() {
      $(this).addClass('li_color');
    });
    $('.residence ul').each(function() {
      $(this).find('li').eq(pos_slide).removeClass('li_color');
    });
  }