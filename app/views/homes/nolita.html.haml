      $(this).ekkoLightbox();
    });
    $('#open-youtube').click(function (e) {
      e.preventDefault();
      $(this).ekkoLightbox();
    });
  });

  // Custom Slider
  var cur_slide=0;
  var bh_totel_slide = $('.main_box_press').length;
  var bh_neg_total = 0-bh_totel_slide;
  
  $('.next').click(function(e) {
    $('.prev').show();
    bh_slide('right');
    e.preventDefault();
  });
  
  $('.prev').click(function(e) {
    $('.next').show();
    bh_slide('left');
    e.preventDefault();
  });
  
  function bh_slide(dir) {
    var  slide=0 
    var left_css
    if(dir == 'left') 
      cur_slide++;
    else
      cur_slide--;
      slide=cur_slide;
      left_css = slide*1105;
      left_css += 'px';
    $('#bh_slide_1').css('margin-left',left_css);
    if( (cur_slide) == (bh_neg_total+1) )
      $('.next').hide();
    if( (cur_slide) == 0 ) 
      $('.prev').hide();
  }