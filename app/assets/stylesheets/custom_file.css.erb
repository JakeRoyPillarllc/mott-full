/* Font Helpers */

@font-face {
	font-family: 'TrajanPro-Bold';
	src: url(<%= asset_path "TrajanPro-Bold.eot?" %>) format('eot'), 
	     url(<%= asset_path "TrajanPro-Bold.otf" %>)  format('opentype'),
	     url(<%= asset_path "TrajanPro-Bold.woff" %>) format('woff'), 
	     url(<%= asset_path "TrajanPro-Bold.ttf" %>)  format('truetype'),
	     url(<%= asset_path "TrajanPro-Bold.svg#TrajanPro-Bold" %>) format('svg');
}

